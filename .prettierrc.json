{
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "useTabs": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "printWidth": 200,
        "proseWrap": "preserve"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "printWidth": 200,
        "singleQuote": false
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "printWidth": 200,
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 200
      }
    },
    {
      "files": "*.html",
      "options": {
        "printWidth": 200,
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
