# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS files
[*.css]
indent_size = 2
max_line_length = 120

# JavaScript files
[*.js]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Ruby files
[*.rb]
indent_size = 2
max_line_length = 100

# Jekyll files
[*.{liquid,html}]
indent_size = 2
max_line_length = 120

# Configuration files
[*.{ini,cfg,conf}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Lock files
[package-lock.json]
indent_size = 2

# Git files
[.gitignore]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
