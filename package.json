{
  "name": "ctwr-web",
  "version": "2.0.0",
  "description": "CivicTech Waterloo Region Website",
  "scripts": {
    "serve": "bundle exec jekyll serve --livereload",
    "build": "npm run build:prod",
    "build:dev": "bundle exec jekyll build",
    "build:prod": "npm run minify && JEKYLL_ENV=production bundle exec jekyll build",
    "build:css": "bash scripts/build-css.sh",
    "build:main-css": "bash scripts/build-main-css.sh",
    "minify:css": "cleancss -o css/main.min.css css/main.css",
    "minify:js": "terser js/optimized-bundle.js -o js/optimized-bundle.min.js --compress --mangle",
    "minify": "npm run minify:css && npm run minify:js",
    "purge:css": "purgecss --config ./purgecss.config.js",
    "optimize:all": "npm run build:css && npm run minify:js",
    "lint": "npm run lint:css && npm run lint:md && npm run lint:yaml && npm run lint:json && npm run lint:shell",
    "lint:css": "stylelint \"css/**/*.css\" --config .stylelintrc.json --ignore-pattern \"**/*.min.css\"",
    "lint:md": "bash scripts/lint-markdown.sh",
    "lint:yaml": "bash scripts/lint-yaml.sh",
    "lint:json": "bash scripts/lint-json.sh",
    "lint:shell": "bash scripts/lint-shell.sh",
    "analyze:css": "cssstats css/main.css --json > css-analysis.json",
    "test:performance": "lighthouse http://localhost:4000 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless' --quiet",
    "monitor:css": "bash scripts/monitor-css-performance.sh",
    "test:css": "node tests/css/component-tests.js",
    "test:css:visual": "node tests/css/visual-regression.js",
    "test:css:regression": "bash scripts/css-regression-test.sh",
    "validate:css:budget": "bash scripts/validate-css-budget.sh",
    "test:css:all": "npm run test:css && npm run test:css:visual && npm run test:css:regression && npm run validate:css:budget",
    "test": "npm run test:css:all"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "@playwright/test": "^1.58.1",
    "autoprefixer": "^10.4.24",
    "axe-core": "^4.11.1",
    "browserslist": "^4.26.3",
    "caniuse-lite": "^1.0.30001764",
    "clean-css-cli": "^5.6.3",
    "cssstats-cli": "^4.0.5",
    "css-tree": "^2.3.1",
    "postcss-combine-media-query": "^2.1.0",
    "markdownlint-cli": "^0.47.0",
    "lighthouse": "^12.8.2",
    "pa11y": "^9.0.1",
    "pa11y-ci": "^4.0.1",
    "playwright": "^1.58.1",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.1",
    "postcss-combine-duplicated-selectors": "^10.0.2",
    "postcss-sort-media-queries": "^4.2.1",
    "purgecss": "^7.0.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "terser": "^5.46.0",
    "yaml-lint": "^1.7.0"
  }
}
